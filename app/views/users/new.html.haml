%h1 Add Staff

=# form_for(@user) do |f|
= form_for(@user, url: users_path) do |f|
  .form-field
    = f.label :first_name
    %br/
    = f.text_field :first_name

  .form-field
    = f.label :email
    %br/
    = f.text_field :email

  .user-type-panel
    .form-field
      = f.radio_button :user_type, "head coach"
      = f.label :user_head_coach, "Head Coach"
      |
      = f.radio_button :user_type, "staff"
      = f.label :user_director, "Staff"

  .form-field
    = f.submit "create staff and send email"


