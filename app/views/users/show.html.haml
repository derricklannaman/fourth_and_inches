- if current_user.has_role? 'director'
  %div
    = link_to 'Back to Staff', users_path
    |
    = link_to 'Dashboard', dashboard_path

%h2
  .form-field
    = "First Name: #{@user.first_name}"
  .form-field
    = "Last Name: #{@user.last_name}"
  .form-field
    = "Email:  #{@user.email}"
  .form-field
    = link_to 'edit', edit_user_path(@user)
    |
    %a.deny-access
      cancel access
    |
    %a.delete-staff
      delete

