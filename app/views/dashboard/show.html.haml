%header
  %h2
    = "Welcome #{@current_user.username.titleize} to your Dashboard"

#sideControls

  = link_to "Start New Team", '#', remote: true, id: 'addNewTeamButton', class: "btn btn-default"
  %br

  = link_to "View All Teams", '#', remote: true, id: 'allTeamsButton', class: "btn btn-default"
  %br

  = link_to "Add New Player", new_player_path, class: "btn btn-default"

.clear

%section#addNewTeam
  = render "teams/new"

%section#current_team_container
  = render "teams/active"

%section#viewAllTeams
  %br
  = render "teams/index"

.clear


