/ TODO: better design
=# render 'director_navigation/main_side_panel'
- if current_user.has_role? 'director'

  %div
    = link_to 'Back to All Teams', teams_path
.team-info-box
  %h2
    = "team: #{@active_team.title} "
  %h3
    Age group:
    = @active_team.age_group
  %h3
    Number of Players:
    = @active_team.num_of_players


  %section#currentTeam
    - if @active_team.present?
      .conceal-players
        %span#close.back ← close
      %br/
      %ul#tp-grid.tp-grid
        .teamBanner
        - @players.each do |player|
          - if player.id == @players.last.id
            %li{"data-pile" => "#{@active_team.title.upcase} Football Team" }
              %span.tp-info
                %span= "#{@active_team.title.upcase} Football Team"
              = image_tag('uniondale knight.png', size: '300')
          - else
            %li{"data-pile" => "#{@active_team.title.upcase} Football Team" }
              %a{href: player_path(player.id)}
                %span.tp-info
                  %span= "#{player.first_name} #{player.last_name}"
                = image_tag('helmet.png', size: '170')



