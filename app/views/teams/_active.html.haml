%section#currentTeam
  - if @active_team.present?
    .conceal-players
      %span#close.back ← close
    %br/
    %ul#tp-grid.tp-grid
      .teamBanner
      - @players.each do |player|
        - if player.id == @players.last.id
          %li{"data-pile" => "#{@active_team.title.upcase} Football Team" }
            %span.tp-info
              %span= "#{@active_team.title.upcase} Football Team"
            = display_team_logo(:square)
        - else
          %li{"data-pile" => "#{@active_team.title.upcase} Football Team" }
            %a{href: player_path(player.id)}
              %span.tp-info
                %span= "#{player.first_name} #{player.last_name}"
              - if player.avatar_updated_at.nil?
                = image_tag('helmet.png', size: '200')
              - else
                = image_tag player.avatar.url(:medium), class: 'player-profile-picture'

