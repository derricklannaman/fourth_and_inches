.form-pointer-default
= form_for(@team, html: {class: 'default-form-template'}) do |f|

  .form-field
    = f.label :division, 'Division'

  .form-field
  - if (controller_name == 'teams' && action_name == 'new' )
    = f.select(:division, options_for_select(@divisions.collect{ |d| [d,{class: 'division-options'} ]} ))

  - elsif (controller_name == 'teams' && action_name == 'edit')

    = f.select(:division, options_for_select(@divisions.collect{ |d| [d.name,{class: 'division-options'} ]} ))

  .form-field
    = f.label :head_coach
    / TODO: list current head coach here
  .form-field
    / this works for team/new
    = f.select(:head_coach, options_for_select(@head_coaches.collect{ |hc| [hc.first_name + ' ' + hc.last_name, hc.id,{class: 'division-options'} ]} ))
  .form-section-2
    .form-field
      = f.label :title
    .form-field
      = f.text_field :title

  .form-field
    = f.submit nil, class: 'default-submit-button'

