#schedule-manager

  %h2#month
    = link_to "<", date: @date.prev_month
    = @date.strftime("%B %Y")
    = link_to ">", date: @date.next_month
  = calendar @date do |date|
    = date.day
    - if @appointments_by_date[date]
      - @appointments_by_date[date].each do |appointment|
        .cal_events
          = link_to appointment.entry_type, appointment
          %span at
          %span= show_time(appointment.time)
          %span= show_opponent(appointment)